<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/LightGreen">

    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/heding_img"
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:src="@drawable/tre" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonPanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/Header"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/white">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Existing"
            android:paddingLeft="50dp"
            android:paddingTop="20dp"
            android:textColor="#E91E63"
            android:textSize="20dp" />

        <Button

            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="170dp"
            android:text="New Account"
            android:textSize="15dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5px"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="1px"
            android:layout_marginBottom="5px"
            android:textColor="@color/white"
            android:background="@color/Black"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/signup_p"
        app:layout_constraintTop_toBottomOf="@id/Header"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingTop="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"

        android:orientation="vertical">
        <EditText
            android:id="@+id/text1"
            android:drawableEnd="@drawable/baseline_person_24"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Username"
            android:textColor="@color/black"

            android:drawableRight="@drawable/baseline_person_24" />
        <EditText
            android:id="@+id/text2"
            android:drawableEnd="@drawable/baseline_email_24"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:drawableRight="@drawable/baseline_email_24" />
        <EditText
            android:id="@+id/text3"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/baseline_lock_24"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:drawableRight="@drawable/baseline_lock_24" />

        <EditText
            android:id="@+id/text4"
            android:drawableEnd="@drawable/baseline_lock_24"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:drawableRight="@drawable/baseline_lock_24" />

    </LinearLayout>
    <Button
        android:id="@+id/signup_b"
        android:text="Sign up"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/signup_p"
        android:background="@color/Green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>